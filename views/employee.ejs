<link rel="stylesheet" href="/css/employee.css">
<h3 class="text-center mt-3" >All Employees</h3>

<div class="container mt-4 " >

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col" class="two">Name</th>
                <th scope="col" class="two">Email</th>
                <th scope="col" class="two">Password</th>
                <th scope="col" class="two">isAdmin</th>
                <th scope="col" class="two">Delete</th>
            </tr>
        </thead>

            <tbody class="tbody">
                <% for(let i=0;i < employees.length;i++){ %>
                    <tr>
                    <td class="one"><%=employees[i].name %></td>
                    <td class="one"><%=employees[i].email %></td>
                    <td class="one"><%=employees[i].password %></td>
                    <td class="one"><%=employees[i].isAdmin %></td>
                    <td class="one">
                        <a href="/admin/delete-employee/<%=employees[i]._id%>" class="btn btn-danger">
                            Delete
                        </a>
                    </td>
                    </tr>
                <% } %>
            </tbody>
        
    </table>
</div>

